%h1 New User

- if @user.errors.full_messages.any?
  %ul
    - @user.errors.full_messages.each do |error_message|
      %li= error_message
      %br

= form_for @user do |f|
  = f.label :fname, 'First Name:'
  = f.text_field :fname
  %br
  = f.label :lname, 'Last Name'
  = f.text_field :lname
  %br
  = f.label :username, 'Username'
  = f.text_field :username
  %br
  = f.label :email
  = f.text_field :email
  %br
  = f.label :password
  = f.text_field :password
  %br
  %br
  = f.submit

